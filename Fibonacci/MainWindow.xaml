<Metro:MetroWindow x:Class="Fibonacci.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fibonacci"
        xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Metro:MetroWindow.LeftWindowCommands>
        <Metro:WindowCommands>
            <Button Name="NewButton">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_greek_sigma_uppercase}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0" Text="New" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Name="OpenButton">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_chevron_up}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0" Text="Open" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Name="SaveButton">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_save}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0" Text="Save" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Metro:WindowCommands>
    </Metro:MetroWindow.LeftWindowCommands>
    <Metro:MetroWindow.RightWindowCommands>
        <Metro:WindowCommands>
            <Button Name="ContentsButton" Click="ContentsButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_grade_f}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0" Text="Contents" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Name="SettingButton" Click="SettingButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20" Height="20" Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cog}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0" Text="Setting" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Metro:WindowCommands>
    </Metro:MetroWindow.RightWindowCommands>
    <Metro:MetroWindow.Resources>
        <local:GradeSystemCollection x:Key="GradeSystemCollectionKey" />
    </Metro:MetroWindow.Resources>
    <Metro:MetroAnimatedTabControl Name="MainTabControl">
        <Metro:MetroAnimatedTabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border Name="TabPanel" Margin="0" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Metro:MetroAnimatedTabControl.Resources>
        <TabControl.Items>
            <TabItem Header="Contents">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="User" FontSize="30" Margin="10 3 3 3"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Grid.RowSpan="2">
                                <Button Style="{DynamicResource MetroCircleButtonStyle}" Width="50" Height="50" Padding="5"
                                        VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Rectangle Fill="{StaticResource AccentColorBrush}" Width="25" Height="25">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Visual="{StaticResource appbar_greek_sigma_uppercase}" TileMode="Tile" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                <TextBlock>Hello</TextBlock>
                            </Grid>
                        </Grid>
                        
                    </Grid>
                    <Grid Background="Red" Grid.Column="0" Grid.Row="1" />
                    <Grid Background="Green" Grid.Column="1" Grid.Row="1" />
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="학점 구간 설정" Grid.ColumnSpan="2" FontSize="30" Margin="10"/>

                    <ListView Name="GradeSystemListView"
                              ItemsSource="{StaticResource GradeSystemCollectionKey}"
                              BorderThickness="0"
                              SelectionMode="Single"
                              SelectedItem="{Binding Source={StaticResource GradeSystemCollectionKey},Path=SelectedItem,Mode=TwoWay}"
                              Grid.Row="1"
                              Margin="10 3"
                              >
                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="FontWeight" Value="Normal" />
                                <Setter Property="Foreground" Value="Black" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Name="Panel" Background="{TemplateBinding Background}" Padding="4">
                                                <TextBlock FontWeight="{TemplateBinding FontWeight}" Foreground="{TemplateBinding Foreground}"
                                                VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <ContentPresenter Content="{Binding Name}"/>
                                                </TextBlock>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="SeaGreen" />
                                                    <Setter Property="Foreground" Value="White" />
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Trigger>

                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="DarkSeaGreen" />
                                                    <Setter Property="Foreground" Value="White" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.Resources>
                    </ListView>

                    <ListView Name="GradeItemsListView"
                  Grid.Column="1"
                  BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemsSource="{Binding Source={StaticResource GradeSystemCollectionKey},Path=SelectedItem}"
                              Margin="10 3"
                              Grid.Row="1">
                        <ListView.Resources>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Name="Panel">
                                                <Grid Name="Grid">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30"/>
                                                        <ColumnDefinition Name="CenterColumn"/>
                                                        <ColumnDefinition Width="30"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Name="GradeStringBlock" Text="{Binding Path=GradeName}" HorizontalAlignment="Left"
                                                   Margin="5" VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" Name="StackSlider"
                                                                VerticalAlignment="Center">
                                                        <Slider Name="GradeValueSlider" Value="{Binding Path=GradeValue}" Grid.Column="1"
                                                                Width="{Binding ElementName=StackSlider, Path=ActualWidth}"
                                                                Style="{DynamicResource FlatSlider}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" LargeChange="1" SmallChange="0.1"
                                                        Maximum="{Binding Source={StaticResource GradeSystemCollectionKey},Path=SelectedItem.Maximum}" Minimum="0"
                                                       Margin="2"/>
                                                    </StackPanel>
                                                    <TextBlock Name="GradeValueBlock" Text="{Binding Path=GradeValue}" HorizontalAlignment="Center"
                                                   Margin="3" VerticalAlignment="Center" Grid.Column="2"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.Resources>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl.Items>
    </Metro:MetroAnimatedTabControl>
</Metro:MetroWindow>
