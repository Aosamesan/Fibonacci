<Metro:MetroWindow x:Class="Fibonacci.MainWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:Metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:Fibonacci"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   Name="MainWindowName"
                   Title="MainWindow"
                   Width="1024"
                   Height="600"
                   mc:Ignorable="d">
    <Metro:MetroWindow.LeftWindowCommands>
        <Metro:WindowCommands>
            <Button Name="NewButton" Click="NewButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                               Height="20"
                               Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},
                                              Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_greek_sigma_uppercase}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                               VerticalAlignment="Center"
                               Text="New" />
                </StackPanel>
            </Button>
            <Button Name="OpenButton" Click="OpenButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                               Height="20"
                               Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},
                                              Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_download}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                               VerticalAlignment="Center"
                               Text="Import" />
                </StackPanel>
            </Button>
            <Button Name="SaveButton">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                               Height="20"
                               Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},
                                              Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_upload}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                               VerticalAlignment="Center"
                               Text="Export" />
                </StackPanel>
            </Button>
        </Metro:WindowCommands>
    </Metro:MetroWindow.LeftWindowCommands>
    <Metro:MetroWindow.RightWindowCommands>
        <Metro:WindowCommands>
            <Button Name="ContentsButton" Click="ContentsButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                               Height="20"
                               Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},
                                              Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_grade_f}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                               VerticalAlignment="Center"
                               Text="Contents" />
                </StackPanel>
            </Button>
            <Button Name="SettingButton" Click="SettingButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                               Height="20"
                               Fill="{Binding RelativeSource={RelativeSource AncestorType=Button},
                                              Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cog}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                               VerticalAlignment="Center"
                               Text="Setting" />
                </StackPanel>
            </Button>
        </Metro:WindowCommands>
    </Metro:MetroWindow.RightWindowCommands>
    <Metro:MetroAnimatedTabControl Name="MainTabControl">
        <Metro:MetroAnimatedTabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border Name="TabPanel" Margin="0" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <local:NullToVisibilityConverter x:Key="NullToVisibilityConverterKey" />
            <local:VisibilityNotConverter x:Key="VisibilityNotConverterKey" />
            <local:ObjectToSemesterConverter x:Key="ObjectToSemesterConverterKey" />
            <local:NullToBooleanConverter x:Key="NullToBooleanConverterKey" />
        </Metro:MetroAnimatedTabControl.Resources>
        <TabControl.Items>
            <TabItem Header="Contents">
                <Grid>
                    <Grid Name="ContentsTabGrid" Visibility="{Binding ElementName=MainWindowName, Path=SelectedUser, Converter={StaticResource NullToVisibilityConverterKey}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Column="0" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock Margin="10 3 3 3"
                                           FontSize="30"
                                           Foreground="{StaticResource AccentColorBrush}"
                                           Text="Grades" />
                                <StackPanel Grid.RowSpan="2"
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                    <Button Name="InfomationButton"
                                            Width="50"
                                            Height="50"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Click="InfomationButton_Click"
                                            Padding="5"
                                            Style="{DynamicResource MetroCircleButtonStyle}">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Rectangle Width="25"
                                                       Height="25"
                                                       Fill="{StaticResource AccentColorBrush}">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush TileMode="Tile" Visual="{StaticResource appbar_greek_sigma_uppercase}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="{Binding ElementName=InfomationButton, Path=ActualWidth}" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Margin="10 5"
                                               VerticalAlignment="Center"
                                               FontSize="15"
                                               Foreground="{StaticResource AccentColorBrush}"
                                               Text="Name" />

                                    <TextBlock Name="GradeBlock"
                                               Grid.Column="1"
                                               HorizontalAlignment="Center"
                                               FontSize="25"
                                               Foreground="{StaticResource AccentColorBrush}"
                                               Text="{Binding ElementName=MainWindowName,
                                                              Path=SelectedUser.Name}" />
                                    <TextBlock Grid.Column="2"
                                               Margin="10 5"
                                               VerticalAlignment="Center"
                                               FontSize="15"
                                               Foreground="{StaticResource AccentColorBrush}"
                                               Text="Student #" />
                                    <TextBlock Name="StudentNumberBlock"
                                               Grid.Column="3"
                                               HorizontalAlignment="Center"
                                               FontSize="25"
                                               Foreground="{StaticResource AccentColorBrush}"
                                               Text="{Binding ElementName=MainWindowName,
                                                              Path=SelectedUser.StudentNumber}" />
                                    <TextBlock Grid.Column="4"
                                               Margin="10 5"
                                               VerticalAlignment="Center"
                                               FontSize="15"
                                               Foreground="{StaticResource AccentColorBrush}"
                                               Text="Grade" />
                                    <TextBlock Name="GradeTextBlock"
                                               Grid.Column="5"
                                               HorizontalAlignment="Center"
                                               FontSize="25"
                                               Foreground="{StaticResource AccentColorBrush}"
                                               Text="{Binding ElementName=MainWindowName,
                                                              Path=SelectedUser.GradeString}" />
                                </Grid>
                            </Grid>

                        </Grid>
                        <Border Grid.Row="1"
                                Grid.Column="0"
                                BorderBrush="{StaticResource AccentColorBrush}"
                                BorderThickness="0 1 1 0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="28"
                                           Foreground="{StaticResource AccentColorBrush}">
                                    Semesters
                                </TextBlock>

                                <ListBox Name="SemesterListBox"
                                         Grid.Row="1"
                                         Margin="2 10 2 2"
                                         ItemsSource="{Binding ElementName=MainWindowName,
                                                               Path=SelectedUser.Semesters}"
                                         SelectionMode="Single">
                                    <ListBox.Resources>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Foreground" Value="{StaticResource AccentColorBrush}" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="FontWeight" Value="Normal" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <Border Name="Panel"
                                                                Margin="10 0"
                                                                Background="{TemplateBinding Background}">
                                                            <TextBlock FontSize="18"
                                                                       FontWeight="{TemplateBinding FontWeight}"
                                                                       Foreground="{TemplateBinding Foreground}"
                                                                       Text="{Binding Path=Name}" />
                                                        </Border>

                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Foreground" Value="White" />
                                                                <Setter Property="Background" Value="{StaticResource AccentColorBrush}" />
                                                            </Trigger>

                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Foreground" Value="White" />
                                                                <Setter Property="Background" Value="{StaticResource AccentColorBrush}" />
                                                                <Setter Property="FontWeight" Value="Black" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.Resources>
                                </ListBox>

                                <StackPanel Grid.Row="2"
                                            Margin="10 5"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                    <Button Name="SemesterAddButton"
                                            Width="50"
                                            Height="50"
                                            Margin="4"
                                            Click="SemesterAddButton_Click"
                                            Style="{StaticResource MetroCircleButtonStyle}">
                                        <StackPanel>
                                            <Rectangle Width="30"
                                                       Height="30"
                                                       Fill="{StaticResource AccentColorBrush}">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Visual="{StaticResource appbar_add}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="SemesterDeleteButton"
                                            Width="50"
                                            Height="50"
                                            Margin="4"
                                            Click="SemesterDeleteButton_Click"
                                            Style="{StaticResource MetroCircleButtonStyle}">
                                        <StackPanel>
                                            <Rectangle Width="30"
                                                       Height="30"
                                                       Fill="{StaticResource AccentColorBrush}">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Visual="{StaticResource appbar_close}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border Grid.Row="1"
                                Grid.Column="1"
                                BorderBrush="{StaticResource AccentColorBrush}"
                                BorderThickness="0 1 0 0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock HorizontalAlignment="Center"
                                           FontSize="28"
                                           Foreground="{StaticResource AccentColorBrush}">
                                    Lectures
                                </TextBlock>

                                <ListView Name="LectureListView"
                                          Grid.Row="1"
                                          BorderThickness="0"
                                          ItemsSource="{Binding ElementName=SemesterListBox,
                                                                Path=SelectedItem,
                                                                Converter={StaticResource ObjectToSemesterConverterKey}}">
                                    <ListView.Resources>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="{StaticResource AccentColorBrush}" />
                                            <Setter Property="FontWeight" Value="Normal" />
                                            <Setter Property="FontSize" Value="24" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListViewItem">
                                                        <Border Name="Panel" Background="{TemplateBinding Background}">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Name="NameBlock"
                                                                           HorizontalAlignment="Center"
                                                                           FontSize="{TemplateBinding FontSize}"
                                                                           FontWeight="{TemplateBinding FontWeight}"
                                                                           Foreground="{TemplateBinding Foreground}"
                                                                           Text="{Binding LectureName}" />

                                                                <Metro:NumericUpDown Grid.Column="1"
                                                                                     Margin="10 2"
                                                                                     BorderThickness="1"
                                                                                     FontSize="{TemplateBinding FontSize}"
                                                                                     FontWeight="{TemplateBinding FontWeight}"
                                                                                     Foreground="{TemplateBinding Foreground}"
                                                                                     Value="{Binding Credit}" />

                                                                <Metro:SplitButton Grid.Column="2"
                                                                                   Margin="10 2"
                                                                                   BorderBrush="{StaticResource AccentColorBrush}"
                                                                                   BorderThickness="1"
                                                                                   FontSize="{TemplateBinding FontSize}"
                                                                                   FontWeight="{TemplateBinding FontWeight}"
                                                                                   Foreground="Red"
                                                                                   ItemsSource="{Binding ElementName=MainWindowName,
                                                                                                         Path=SelectedUser.GradeSystem}"
                                                                                   SelectedItem="{Binding GradeString}" />

                                                                <TextBlock Grid.Column="3"
                                                                           HorizontalAlignment="Center"
                                                                           FontSize="{TemplateBinding FontSize}"
                                                                           FontWeight="{TemplateBinding FontWeight}"
                                                                           Foreground="{TemplateBinding Foreground}"
                                                                           Text="{Binding GradeTuple.GradeValue}" />
                                                            </Grid>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <EventTrigger RoutedEvent="MouseEnter">
                                                                <BeginStoryboard x:Name="Flinker">
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="Panel"
                                                                                         Storyboard.TargetProperty="(Border.Opacity)"
                                                                                         From="1"
                                                                                         To="0"
                                                                                         AutoReverse="True"
                                                                                         Duration="0:0:0.1"
                                                                                         RepeatBehavior="Forever"
                                                                                         />
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                            <EventTrigger RoutedEvent="MouseLeave">
                                                                <StopStoryboard BeginStoryboardName="Flinker"/>
                                                            </EventTrigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="FontWeight" Value="Black" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.Resources>
                                </ListView>

                                <StackPanel Grid.Row="2"
                                            Margin="10 5"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                    <Button Name="LectureAddButton"
                                            Width="50"
                                            Height="50"
                                            Margin="4"
                                            BorderBrush="{StaticResource AccentColorBrush}"
                                            Click="LectureAddButton_Click"
                                            IsEnabled="{Binding ElementName=SemesterListBox,
                                                                Path=SelectedItem,
                                                                Converter={StaticResource NullToBooleanConverterKey}}"
                                            Style="{StaticResource SquareButtonStyle}">
                                        <StackPanel>
                                            <Rectangle Width="30"
                                                       Height="30"
                                                       Fill="{StaticResource AccentColorBrush}">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Visual="{StaticResource appbar_add}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Button>
                                    <Button Name="LectureDeleteButton"
                                            Width="50"
                                            Height="50"
                                            Margin="4"
                                            BorderBrush="{StaticResource AccentColorBrush}"
                                            IsEnabled="{Binding ElementName=SemesterListBox,
                                                                Path=SelectedItem,
                                                                Converter={StaticResource NullToBooleanConverterKey}}"
                                            Style="{StaticResource SquareButtonStyle}">
                                        <StackPanel>
                                            <Rectangle Width="30"
                                                       Height="30"
                                                       Fill="{StaticResource AccentColorBrush}">
                                                <Rectangle.OpacityMask>
                                                    <VisualBrush Visual="{StaticResource appbar_close}" />
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                    <Grid Name="ScreenSaver"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Visibility="{Binding ElementName=ContentsTabGrid,
                                               Path=Visibility,
                                               Converter={StaticResource VisibilityNotConverterKey}}">
                        <TextBlock HorizontalAlignment="Center"
                                   FontSize="36"
                                   Foreground="{StaticResource AccentColorBrush}"
                                   TextWrapping="WrapWithOverflow">
                            새로운 프로필을 생성하거나 기존 프로필을 불러와야 합니다.
                        </TextBlock>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid>
                    <Grid Visibility="{Binding ElementName=ContentsTabGrid, Path=Visibility}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="10"
                                       FontSize="30"
                                       FontWeight="Thin"
                                       Foreground="{StaticResource AccentColorBrush}"
                                       Text="Credits Settings" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Name="GradeAddButton"
                                        Width="50"
                                        Height="50"
                                        Click="GradeAddButton_Click"
                                        Style="{StaticResource MetroCircleButtonStyle}">
                                    <StackPanel>
                                        <Rectangle Width="30"
                                                   Height="30"
                                                   Fill="{StaticResource AccentColorBrush}">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Visual="{StaticResource appbar_add}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </StackPanel>
                                </Button>
                                <Button Name="GradeDeleteButton"
                                        Width="50"
                                        Height="50"
                                        Click="GradeDeleteButton_Click"
                                        Style="{StaticResource MetroCircleButtonStyle}">
                                    <StackPanel>
                                        <Rectangle Width="30"
                                                   Height="30"
                                                   Fill="{StaticResource AccentColorBrush}">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Visual="{StaticResource appbar_delete}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </StackPanel>
                                </Button>
                                <Button Name="TestButton"
                                        Width="50"
                                        Height="50"
                                        Click="TestButton_Click"
                                        Style="{StaticResource MetroCircleButtonStyle}">
                                    <StackPanel>
                                        <Rectangle Width="30"
                                                   Height="30"
                                                   Fill="{StaticResource AccentColorBrush}">
                                            <Rectangle.OpacityMask>
                                                <VisualBrush Visual="{StaticResource appbar_social_line}" />
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <ListView Name="GradeSystemListView"
                                  Grid.Row="1"
                                  Margin="10 3"
                                  BorderThickness="0"
                                  ItemsSource="{Binding ElementName=MainWindowName,
                                                        Path=SelectedUser.GradeSystem}"
                                  SelectionMode="Single">
                            <ListView.Resources>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="FontWeight" Value="Normal" />
                                    <Setter Property="Foreground" Value="{StaticResource AccentColorBrush}" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border Name="Panel"
                                                        Background="{TemplateBinding Background}"
                                                        Padding="4">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100" />
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="100" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="20"
                                                                   FontWeight="{TemplateBinding FontWeight}"
                                                                   Foreground="{TemplateBinding Foreground}"
                                                                   Text="{Binding GradeName}" />

                                                        <StackPanel Name="CenterColumn"
                                                                    Grid.Column="1"
                                                                    VerticalAlignment="Center">
                                                            <Slider Name="GradeSlider"
                                                                    Grid.Column="1"
                                                                    Width="{Binding ElementName=CenterColumn,
                                                                                    Path=ActualWidth}"
                                                                    LargeChange=".1"
                                                                    Maximum="{Binding ElementName=MainWindowName,
                                                                                      Path=SelectedUser.Maximum}"
                                                                    Minimum="0"
                                                                    SmallChange=".1"
                                                                    Style="{DynamicResource FlatSlider}"
                                                                    Value="{Binding GradeValue}" />
                                                        </StackPanel>

                                                        <TextBlock Grid.Column="2"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   FontSize="20"
                                                                   FontWeight="{TemplateBinding FontWeight}"
                                                                   Foreground="{TemplateBinding Foreground}"
                                                                   Text="{Binding GradeValue}" />
                                                    </Grid>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="SeaGreen" />
                                                        <Setter Property="Foreground" Value="White" />
                                                        <Setter Property="FontWeight" Value="SemiBold" />
                                                    </Trigger>

                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="SeaGreen" />
                                                        <Setter Property="Foreground" Value="White" />
                                                        <Setter Property="FontWeight" Value="Bold" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.Resources>
                        </ListView>
                    </Grid>
                    <Grid Name="ScreenSaver2"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Visibility="{Binding ElementName=ScreenSaver,
                                               Path=Visibility}">
                        <TextBlock HorizontalAlignment="Center"
                                   FontSize="36"
                                   Foreground="{StaticResource AccentColorBrush}"
                                   TextWrapping="WrapWithOverflow">
                            새로운 프로필을 생성하거나 기존 프로필을 불러와야 합니다.
                        </TextBlock>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl.Items>
    </Metro:MetroAnimatedTabControl>
</Metro:MetroWindow>
